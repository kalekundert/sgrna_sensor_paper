	pages = {453--459},
	file = {Full Text PDF:/home/kale/.mozilla/firefox/kfgk8o2d.default/zotero/storage/H28KQDMR/Tang and Breaker - 1997 - Rational design of allosteric ribozymes.pdf:application/pdf;Snapshot:/home/kale/.mozilla/firefox/kfgk8o2d.default/zotero/storage/6QM6SNRE/S1074-5521(97)90197-6.html:text/html}
